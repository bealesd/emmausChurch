@using Emmaus.Helper;

@{
    var services = (List<Service>)ViewData["services"];
    string newTitle = ServiceListHelper.Title(services, (string)ViewData["Title"]);
}

<div class="mainWrapper">
    
    <div class="title">
        <h1>@Html.Raw(@newTitle)</h1>
    </div>

    <!--#region table  -->
    <div class="table">

        <div class="fieldOne table-header">
            <p>Date</p>
        </div>

        <div class="fieldTwo table-header">
            <p>Bible Text</p>
        </div>

        <div class="fieldThree table-header">
            <p>Speaker</p>
        </div>

        @foreach (var service in services)
        {
            <div class="fieldOne">
                <p>@service.Date</p>
            </div>
            <div class="fieldTwo">
                <p>
                    @service.Summary
                </p>
            </div>
            <div class="fieldThree">
                <p>@service.Speaker</p>
            </div>
        }
        <!--#endregion -->

    </div>
</div>